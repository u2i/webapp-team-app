#!/usr/bin/env bash
# Simple wrapper for compliance-cli using Docker
set -e

exec docker run --rm \
    -v "$(pwd):/workspace" \
    -w /workspace \
    -v "${HOME}/.config/gcloud:/root/.config/gcloud" \
    -e "PROJECT_ID=${PROJECT_ID:-u2i-tenant-webapp-nonprod}" \
    -e "REGION=${REGION:-europe-west1}" \
    --entrypoint compliance-cli \
    ghcr.io/u2i/compliance-cli:latest \
    "$@"