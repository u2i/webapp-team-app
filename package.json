{
  "name": "webapp-team-example",
  "version": "1.0.0",
  "description": "Example webapp for compliance testing",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start:with-migrations": "./start.sh",
    "test": "jest --coverage --testPathIgnorePatterns=/test/integration/",
    "test:unit": "jest --coverage --testPathIgnorePatterns=/test/integration/",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:setup": "docker-compose -f docker-compose.test.yml up -d && sleep 5",
    "test:integration:teardown": "docker-compose -f docker-compose.test.yml down -v",
    "test:integration:run": "TEST_DATABASE_PORT=5433 npm run test:integration",
    "test:all": "npm run test:unit && npm run test:integration:setup && npm run test:integration:run ; npm run test:integration:teardown",
    "test:ci": "npm run migrate:test && npm run test:integration && npm run test:unit",
    "test:ci:unit": "npm run test:unit",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write '**/*.{js,json,md}'",
    "format:check": "prettier --check '**/*.{js,json,md}'",
    "migrate": "node migrate.js",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create",
    "migrate:test": "DATABASE_URL=${DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/webapp_test} node-pg-migrate up"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^6.1.0",
    "express": "^4.18.2",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "author": "webapp-team@u2i.com",
  "license": "UNLICENSED",
  "compliance": {
    "iso27001": true,
    "soc2-type2": true,
    "gdpr": true,
    "data-residency": "eu"
  }
}
