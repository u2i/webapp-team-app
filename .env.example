# Docker Compose Configuration
# Copy to .env and customize as needed

# Build configuration
BUILD_TARGET=development        # Options: development, production
CACHE_IMAGE=                   # Optional: image to use for cache

# Container names
APP_CONTAINER_NAME=webapp-app
POSTGRES_CONTAINER_NAME=webapp-postgres

# Application configuration
NODE_ENV=test
APP_PORT=8080
APP_COMMAND=sleep infinity     # Default: keep running. Can be: npm start, npm test, etc.

# Database configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=webapp_test
POSTGRES_PORT=5432

# Database connection
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/webapp_test
DATABASE_SSL_MODE=disable

# Test database settings
TEST_DATABASE_HOST=postgres
TEST_DATABASE_PORT=5432
TEST_DATABASE_NAME=webapp_test
TEST_DATABASE_USER=postgres
TEST_DATABASE_PASSWORD=postgres

# CI/Test settings
CI=false
FORCE_COLOR=0