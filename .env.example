# Docker Compose Configuration
# Copy to .env and customize as needed

# Build configuration
DOCKERFILE=Dockerfile.dev       # Options: Dockerfile.dev (development), Dockerfile (production)
CACHE_IMAGE=                   # Optional: image to use for cache
SKIP_VOLUMES=                  # Set to 'true' to disable volume mounts (for CI)

# Container names
APP_CONTAINER_NAME=webapp-app
POSTGRES_CONTAINER_NAME=webapp-postgres

# Application configuration
NODE_ENV=development
APP_PORT=8080
DEBUG_PORT=9229                # Node.js debugger port
APP_COMMAND=tail -f /dev/null  # Default: keep running. Can be: npm start, npm run dev, etc.

# Database configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=webapp_test
POSTGRES_PORT=5432

# Database connection
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/webapp_test
DATABASE_SSL_MODE=disable

# Test database settings
TEST_DATABASE_HOST=postgres
TEST_DATABASE_PORT=5432
TEST_DATABASE_NAME=webapp_test
TEST_DATABASE_USER=postgres
TEST_DATABASE_PASSWORD=postgres

# CI/Test settings
CI=false
FORCE_COLOR=0